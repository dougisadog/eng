<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->


    <!-- <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style> -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CheckboxHidepwd" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/s_checkbox_hidepwd</item>
    </style>

    <style name="CheckboxCloseVoice" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/s_checkbox_home_voice</item>
    </style>

    <style name="BtnMenuItem" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/s_btn_home_item</item>
        <item name="android:src">@drawable/s_btn_home_item</item>
    </style>

    <style name="BtnTitleBarEidt" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/s_btn_title_bar_edit</item>
        <item name="android:src">@drawable/s_btn_title_bar_edit</item>
    </style>

    <style name="BtnUserInfoEditItem" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/s_btn_item_user_info_edit</item>
    </style>

    <style name="BtnRanklistItem" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/s_btn_item_ranklist</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="BtnPostItem" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/s_listview_item</item>
    </style>

    <style name="BtnSendPost" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/s_listview_item</item>
    </style>

    <style name="BtnRed" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/s_btn_red</item>
    </style>

    <style name="BtnGreen" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/s_btn_green</item>
    </style>

    <style name="BtnTopLine" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/s_btn_top_line</item>
    </style>

    <style name="BtnBottomLine" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/s_btn_bottom_line</item>
    </style>

    <!-- 全屏幕拉伸 -->
    <style name="layout_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 固定自身大小 -->
    <style name="layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 横向分布 -->
    <style name="layout_horizontal" parent="layout_full">
        <item name="android:layout_width">0px</item>
    </style>

    <!-- 纵向分布 -->
    <style name="layout_vertical" parent="layout_full">
        <item name="android:layout_height">0px</item>
    </style>

    <!-- light -->
    <style name="ActionBarTitleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/TopToBottomAnimThemeDialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- <item name="android:windowIsFloating">true</item> -->
    </style>

    <style name="TopToBottomAnimThemeDialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_to_bottom</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="DialogLoadding" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 星星样式 -->
    <style name="commentRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <!-- 去掉dialog标题 -->
    <style name="myDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 心型样式 -->
    <style name="heartRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_heart</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_heart</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

    <!-- activity -->
    <style name="AnimLeftToRightTheme" parent="AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/LeftToRightAnimTheme</item>
    </style>

    <style name="LeftToRightAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
    </style>

    <style name="AnimTopToBottomTheme" parent="AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/TopToBottomAnimTheme</item>
    </style>

    <style name="TopToBottomAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_top</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_top</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_bottom</item>
    </style>

    <!-- dialog -->
    <style name="DialogRightToLeftTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogRightToLeftAnim</item>
        <item name="android:windowBackground">@null</item>
    </style>
    
     <style name="DialogRightToLeftAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fragment_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/fragment_out_to_right</item>
    </style>
    
    <style name="DialogTopToBottomTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogTopToBottomAnim</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="DialogTopToBottomAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dialog_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_from_top</item>
    </style>
    
    <style name="DialogBottomToTopTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogBottomToTopAnim</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="DialogBottomToTopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dialog_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_from_bottom</item>
    </style>

    <style name="CenterDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- <item name="android:windowAnimationStyle">@style/CenterDialogAnimation.Window</item> -->
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="CenterDialogAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/in_from_left</item>
        <item name="android:windowExitAnimation">@anim/out_to_right</item>
    </style>
    
    <style name="DialogAllScreenTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
    </style>
    
    <!-- 进度条的样式 -->
    <style name="MyProgressBarStyleHorizontal" >
	    <item name="android:indeterminateOnly">false</item>
	    <item name="android:progressDrawable">@drawable/progressbar_read_home</item>
	    <item name="android:minHeight">25dp</item>
	    <item name="android:maxHeight">25dp</item>
	    <item name="android:focusable">false</item>
	</style>

</resources>