<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tipsEditText="http://schemas.android.com/apk/res/air.com.shuangge.phone.ShuangEnglish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login" >

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="38dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/s_btn_back1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tip1Login"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp" >

            <View
                android:id="@+id/bgLoginName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_login_input2" />

            <EditText
                android:id="@+id/txtLoginName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:digits="@string/digitsLoginName"
                android:inputType="text"
                android:maxLength="@integer/inputPhoneMax"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="18dp" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/tip1Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtLoginName"
                android:layout_alignBottom="@+id/txtLoginName"
                android:layout_alignLeft="@+id/txtLoginName"
                android:text=""
                android:textColor="@color/default_txt_tips"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tip2Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtLoginName"
                android:layout_alignBottom="@+id/txtLoginName"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tip1Register"
                android:text=""
                android:textColor="@color/default_txt_tips"
                android:textSize="12dp" />

            <ImageButton
                android:id="@+id/btnClearLoginName"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:scaleType="fitEnd"
                android:src="@drawable/btn_clear2" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/tip4Login"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp" >

            <View
                android:id="@+id/bgName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_login_input" />

            <EditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:inputType="text"
                android:maxLength="@integer/inputNameMax"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="20dp" >

            </EditText>

            <TextView
                android:id="@+id/tip3Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtName"
                android:layout_alignBottom="@+id/txtName"
                android:layout_alignLeft="@+id/txtName"
                android:maxLength="12"
                android:text=""
                android:textColor="@color/default_txt_tips"
                android:textSize="14dp" />

            <ImageButton
                android:id="@+id/btnClearName"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:scaleType="fitEnd"
                android:src="@drawable/btn_clear2" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/tip2Login"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp" >

            <View
                android:id="@+id/bgPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_login_input" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:digits="@string/digitsPassword"
                android:inputType="textPassword"
                android:maxLength="@integer/inputPasswordMax"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tip4Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtPassword"
                android:layout_alignBottom="@+id/txtPassword"
                android:layout_alignLeft="@+id/txtPassword"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:text="@string/tip3Login"
                android:textColor="@color/default_txt_tips"
                android:textSize="14dp" />

            <ImageButton
                android:id="@+id/btnClearPassword"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:scaleType="fitEnd"
                android:src="@drawable/btn_clear2" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/checkBoxHidePwd"
            style="@style/CheckboxHidepwd"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:checked="false" />
        
                <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="邀请码"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp" >

            <View
                android:id="@+id/bgInviteNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_login_input" />

            <com.shuangge.english.view.component.EditTextWidthTips
                android:id="@+id/txtInviteNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:digits="@string/digitsLoginName"
                android:inputType="text"
                android:maxLength="5"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                tipsEditText:tips="可不填"
                tipsEditText:tipsColor="#b3b3b3"
                android:textSize="18dp" >

            </com.shuangge.english.view.component.EditTextWidthTips>

            <ImageButton
                android:id="@+id/btnInviteNo"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:scaleType="fitEnd"
                android:src="@drawable/btn_clear2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_yellow" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingBottom="2dp"
                android:text="@string/registerEn"
                android:textColor="#cc423c07"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/txt1"
                android:paddingBottom="4dp"
                android:text="@string/registerCn"
                android:textColor="#88423c07"
                android:textSize="10dp" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>