<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res/air.com.shuangge.phone.ShuangEnglish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.shuangge.english.view.component.ComponentTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:titleStrCn="@string/aboutTitleCn"
        titlebar:titleStrEn="@string/aboutTitleEn"
        titlebar:titleTheme="1" />
	<ScrollView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:scrollbars="vertical"
	    android:background="@color/white" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:orientation="vertical" >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_logo" />
        <TextView
            android:id="@+id/txtVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="爽哥英语 v1.0.0"
            android:textColor="#969696"
            android:textSize="20dp"
             />
        
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/rlContactUs"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

           <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_more3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:text="   意见反馈"
                android:textColor="#969696"
                android:textSize="16dp"/>
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
        	android:layout_marginRight="40dp"
            android:background="#F7F7F7" />
        
        <RelativeLayout
            android:id="@+id/rlBtnApp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" 
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_more3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:text="   热门推荐"
                android:textColor="#969696"
                android:textSize="16dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
        	android:layout_marginRight="40dp"
            android:background="#F7F7F7" />

        <RelativeLayout
            android:id="@+id/rlBtnFAQ"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_more3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:text="   常见问题"
                android:textColor="#969696"
                android:textSize="16dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
        	android:layout_marginRight="40dp"
            android:background="#F7F7F7" />

        <RelativeLayout
            android:id="@+id/rlEvaluation"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_more3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:text="   给个好评"
                android:textColor="#969696"
                android:textSize="16dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
       		android:layout_marginRight="40dp"
            android:background="#F7F7F7" />

        <RelativeLayout
            android:id="@+id/rlAboutUs"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

           <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_more3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:text="   爽哥简介"
                android:textColor="#969696"
                android:textSize="16dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
        	android:layout_marginRight="40dp"
            android:background="#F7F7F7" />
        <RelativeLayout
            android:id="@+id/rlCheckVersion"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

           <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_more3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:text="   检测新版本"
                android:textColor="#969696"
                android:textSize="16dp"/>
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
        	android:layout_marginRight="40dp"
            android:background="#F7F7F7" />
        
        <RelativeLayout
            android:id="@+id/rlDown"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

           <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_more3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:text="   下载课程"
                android:textColor="#969696"
                android:textSize="16dp"/>
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
        	android:layout_marginRight="40dp"
            android:background="#F7F7F7" />
    </LinearLayout>
	</ScrollView>
</LinearLayout>