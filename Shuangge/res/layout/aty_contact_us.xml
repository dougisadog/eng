<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res/air.com.shuangge.phone.ShuangEnglish"
    xmlns:tipsEditText="http://schemas.android.com/apk/res/air.com.shuangge.phone.ShuangEnglish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <com.shuangge.english.view.component.ComponentTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:save="true"
        titlebar:titleStrCn="@string/contactUsTitleCn"
        titlebar:titleStrEn="@string/contactUsTitleEn"
        titlebar:titleTheme="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/s_border_bottom"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/contactUsTip3"
            android:textColor="@color/input_title"
            android:textSize="14dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_input" />

            <com.shuangge.english.view.component.EditTextWidthTips
                android:id="@+id/txtFeedback"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:gravity="top"
                android:padding="10dp"
                android:text=""
                android:textColor="#5c5c5c"
                android:textSize="14dp"
                android:textStyle="bold"
                tipsEditText:tips="@string/contactUsTip1"
                tipsEditText:tipsColor="#b3b3b3" />
        </FrameLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/s_border_bottom"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/contactUsTip4"
            android:textColor="@color/input_title"
            android:textSize="14dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/txt2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_input" />

            <com.shuangge.english.view.component.EditTextWidthTips
                android:id="@+id/txtContactInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:text=""
                android:textColor="#5c5c5c"
                android:textSize="14dp"
                android:textStyle="bold"
                tipsEditText:tips="@string/contactUsTip2"
                tipsEditText:tipsColor="#b3b3b3" />
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="你的联系方式有助于我们的沟通和解决问题, 仅工作人员可见"
        android:textColor="#b3b3b3"
        android:textSize="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="官方交流群："
        android:textColor="#b3b3b3"
        android:textSize="14dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/icon_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icon_qq1" />

    <TextView
        android:id="@+id/qqNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="14dp"
        android:text="@string/aboutContent7"
        android:textColor="#b3b3b3"
        android:textSize="14dp" />
    <FrameLayout
            android:id="@+id/flJoin"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:background="@drawable/s_btn_dialog_ok" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtDialogJoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="加 入"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    />

            </LinearLayout>
     </FrameLayout>

     </LinearLayout>

</LinearLayout>