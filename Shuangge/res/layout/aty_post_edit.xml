<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res/air.com.shuangge.phone.ShuangEnglish"
    xmlns:tipsEditText="http://schemas.android.com/apk/res/air.com.shuangge.phone.ShuangEnglish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <com.shuangge.english.view.component.ComponentTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:save="true"
        titlebar:titleStrCn="@string/postTitleCn"
        titlebar:titleStrEn="@string/postTitleEn" />

    <com.shuangge.english.view.component.photograph.PhotosEditContainer
        android:id="@+id/photosEditContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:cacheColorHint="@android:color/transparent"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="#eee" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="Title"
        android:textColor="#9f9f9f"
        android:textSize="14dp" />

    <com.shuangge.english.view.component.EditTextWidthTips
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:maxLength="@integer/inputPostTitleMax"
        android:singleLine="true"
        android:text="fdsfsdfsdfsdfsdfsdf"
        android:textColor="#5c5c5c"
        android:textSize="16dp"
        tipsEditText:tips="@string/postTip1"
        tipsEditText:tipsColor="#5c5c5c" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="#eee" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
         android:textColor="#9f9f9f"
        android:text="Announcement"
        android:textSize="14dp" />

    <com.shuangge.english.view.component.EditTextWidthTips
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:gravity="top"
        android:maxLength="@integer/inputPostContentMax"
        android:textColor="#5c5c5c"
        android:textSize="16dp"
        tipsEditText:tips="@string/postTip2"
        tipsEditText:tipsColor="#5c5c5c" />

</LinearLayout>