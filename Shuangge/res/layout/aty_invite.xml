<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res/air.com.shuangge.phone.ShuangEnglish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.shuangge.english.view.component.ComponentTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:titleStrEn="邀请有奖"
        titlebar:titleTheme="1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="#595959"
                android:text="@string/inviteTitle"
                android:textSize="16dp" />
            
             <TextView
                android:id="@+id/txtInviteNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="#26a59a"
                android:text=""
                android:textSize="18dp" />
             
              <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="#595959"
                android:text="@string/inviteTips"
                android:textSize="16dp" />
              
            <TextView
                android:id="@+id/txtSubmit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:background="#26a69a"
                android:gravity="center"
                android:text="@string/inviteBtn"
                android:textColor="@color/white"
                android:textSize="18dp" />
             <TextView
                android:id="@+id/txtInvite"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:background="#26a69a"
                android:gravity="center"
                android:text="@string/inviteBtn1"
                android:textColor="@color/white"
                android:textSize="18dp" />
             <TextView
                android:id="@+id/txtInviteMsg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="已填写邀请码："
                android:textColor="#bcbcbc"
                android:textSize="18dp" 
                android:visibility="gone"/>
             
        </LinearLayout>
    </ScrollView>

</LinearLayout>