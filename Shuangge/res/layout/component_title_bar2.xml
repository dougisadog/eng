<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white" >

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@color/transparent"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/s_btn_back2" />

    <TextView
        android:id="@+id/txtBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxWidth="150dp"
        android:singleLine="true"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/imgTitleMsg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/txtBarTitle"
        android:src="@drawable/icon_msg"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgTitleMsg2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/txtBarTitle"
        android:src="@drawable/icon_msg2"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btnDo"
        style="@style/BtnTitleBarEidt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/spinnerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:animationCache="true"
        android:drawSelectorOnTop="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/txtTitlePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-15dp"
        android:layout_toRightOf="@+id/spinnerTitle"
        android:text="â–¼"
        android:textColor="@color/default_green"
        android:textSize="24dp" />

</RelativeLayout>