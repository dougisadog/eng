<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res/air.com.shuangge.phone.ShuangEnglish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainContainer" >
    
    <com.shuangge.english.view.component.ComponentTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titlebar_bg1"
        titlebar:titleStrCn="@string/readListTitleCn"
        titlebar:titleStrEn="@string/readListTitleEn"
        titlebar:titleTheme="0"
        />
   
    <LinearLayout
        android:id="@+id/llTitleContainer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/titleBar"
        android:background="#23b6ca"
        android:orientation="horizontal" >
    </LinearLayout>

    <RelativeLayout 
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        
    <com.shuangge.english.view.component.photograph.MyViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
         >
    </com.shuangge.english.view.component.photograph.MyViewPager>
    
       <LinearLayout
            android:id="@+id/buttonGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtNext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/read_big_green"
        		android:text="开始学习"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="20dp" />

          
        </LinearLayout>
	</RelativeLayout>
</LinearLayout>
