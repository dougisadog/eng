<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_home" />

            <LinearLayout
                android:id="@+id/llLastLesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgLastLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_last_lesson" />

                <TextView
                    android:id="@+id/txtLastLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/txtStartLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_white"
                    android:paddingBottom="5dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="5dp"
                    android:text="@string/lastLessonStart"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical" >

            <com.meetme.android.horizontallistview.HorizontalListView
                android:id="@+id/hlv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9" />

            <LinearLayout
                android:id="@+id/llCreateClass"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_create_class"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:text="班级"
                    android:textColor="@color/blue_green"
                    android:textSize="18dp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:background="@color/transparent"
        android:padding="10dp"
        android:src="@drawable/s_btn_home_menu" />

    <ImageButton
        android:id="@+id/btnMenuWithMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:padding="10dp"
        android:src="@drawable/s_btn_home_menu2"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/checkboxVoice"
        style="@style/CheckboxCloseVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="16dp" />

    <View
        android:id="@+id/llGiftMask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" >

            <ImageView
                android:id="@+id/imgGift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="11dp"
                android:paddingTop="15dp"
                android:src="@drawable/icon_gift" />

            <ImageView
                android:id="@+id/imgRewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="11dp"
                android:paddingTop="15dp"
                android:src="@drawable/icon_rewards" />
             <ImageView
                android:id="@+id/imgGoodsGift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:paddingBottom="45dp"
                android:paddingLeft="15dp"
                android:paddingRight="11dp"
                android:paddingTop="15dp"
                android:src="@drawable/icon_goodsgift" />

            <FrameLayout
                android:id="@+id/flPaopao"
                android:layout_width="120dp"
                android:layout_height="85dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="43dp"
                android:layout_marginRight="8dp" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_gift_paopao" />

                <TextView
                    android:id="@+id/txtGiftPaopao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="adfasfdsafadfasfdsafadfasfdsaf"
                    android:textColor="#13a8bb"
                    android:textSize="14dp" />
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9" />

            <FrameLayout
                android:layout_width="143dp"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="4" >

                <ImageView
                    android:id="@+id/imgRewards2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:src="@drawable/icon_rewards" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <View 
        android:id="@+id/markView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    
</RelativeLayout>