<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlBg"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/titlebar_bg1" >

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/s_btn_back1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtBarTitleEn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxWidth="150dp"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/titlebar_title1"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtBarTitleCn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:maxWidth="150dp"
            android:singleLine="true"
            android:text="(标题)"
            android:textColor="@color/titlebar_title1"
            android:textSize="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/icon_more"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnSettings2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/icon_more2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnMsgs"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/icon_msg"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnMsgs2"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/icon_msg2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/icon_edit"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/icon_delete"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnQuit"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/icon_quit"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnSave"
        android:layout_width="42dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/icon_save1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="关注"
        android:textColor="@color/titlebar_title1"
        android:textSize="12dp"
        android:visibility="gone" />

</RelativeLayout>