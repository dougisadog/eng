<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res/air.com.shuangge.phone.ShuangEnglish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.shuangge.english.view.component.ComponentTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:titleStrCn="@string/downloadTitleCn"
        titlebar:titleStrEn="@string/downloadTitleEn"
        titlebar:titleTheme="1" />

    <ListView
        android:id="@+id/lvDownloads"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f7f7f7"
        android:cacheColorHint="@color/transparent"
        android:listSelector="@color/transparent"
        android:divider="#dbdbdb"
        android:dividerHeight="1px" >
    </ListView>

</LinearLayout>